	"item": [
		{
			"name": "api/tickets Successful ticket retrieval",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "73eed15a-8e7d-4171-a9ae-c174aec6618d",
						"exec": [
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Content-Type is present\", function () {",
							"    pm.response.to.have.header(\"Content-Type\");",
							"});",
							"",
							"pm.test(\"Has valid tickets information\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.data.requests.length).to.be.above(0)",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:5000/api/tickets/{{email}}/{{password}}",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "5000",
					"path": [
						"api",
						"tickets",
						"{{email}}",
						"{{password}}"
					]
				}
			},
			"response": []
		},
